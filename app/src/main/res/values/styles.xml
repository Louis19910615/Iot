<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#3F3F3F</item>
        <item name="android:layout_marginLeft">0dp</item>

    </style>

    <style name="msg">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="edittext_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">#3e3e3e</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#DDDDDD</item>
        <item name="colorControlActivated">#DDDDDD</item>
    </style>

</resources>
